    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menuBawahBacaOnline"
        app:layout_behavior="ghjfghf">


        <LinearLayout
            android:id="@+id/linearBacaBuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/isi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Isi"
                android:textAlignment="inherit"
                android:textSize="25dp" />
            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                android:id="@+id/recycleViewbacabuku"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                />-->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/menuBacaFont"
        android:background="@drawable/round"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:showDividers="beginning|end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="pe"
                    android:textAlignment="center" />

                <SeekBar
                    android:id="@+id/seekBar"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:progress="0" />
                <TextView
                    android:id="@+id/persentase"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="Pa"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:showDividers="beginning|end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="kurang"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="ukuran"
                    android:textAlignment="center" />


                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="Tambah"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:showDividers="beginning|end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="1"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="2"
                    android:textAlignment="center" />


                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="3"
                    android:textAlignment="center" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="4"
                    android:textAlignment="center" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:text="5"
                    android:textAlignment="center" />
            </TableRow>

        </TableLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuBawahBacaOnline"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                android:showDividers="beginning|end">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:drawableTop="@drawable/ic_icons8_menu"
                    android:textAlignment="center" />

                <TextView
                    android:drawableTop="@drawable/ic_icons8_sun"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:drawableTop="@drawable/ic_icons8_settings"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:drawableTop="@drawable/ic_icons8_info"
                    android:textAlignment="center" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>
</RelativeLayout>